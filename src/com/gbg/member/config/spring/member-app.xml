<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	
	<context:annotation-config />
	<context:component-scan base-package="com.gbg.member.service"/>
	<context:component-scan base-package="com.gbg.member.dao"/>
	
	
	<bean id="ds" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="gbg" />
		<property name="password" value="gbg" />
	</bean>
	<!--
   <bean id="ds" class="org.springframework.jndi.JndiObjectFactoryBean">
      <property name="jndiName" value="java:comp/env/jdbc/kitri"/>
   </bean>
-->   <bean id="ssfb" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation" value="classpath:com/gbg/member/config/sqlmap/SqlMapConfig.xml"/>
		<property name="dataSource" ref="ds"/>
	</bean>
	
	<bean id="ss" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="ssfb"/>
	</bean>
	
</beans>





