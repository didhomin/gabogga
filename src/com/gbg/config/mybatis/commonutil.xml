<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper     
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.gbg.util.dao.CommonPDao">
    
    <select id="getNextSeq" resultType="int">
        select seq_board_seq.nextval
        from dual
    </select>
    
    <update id="updateHit" parameterType="int">
        update board
        set hit = hit + 1
       
    </update>
    
    <select id="newArticleCount" parameterType="int" resultType="int">
        select count(user_id)
        from users
        where type=#{bcode}
    </select>
    
    <select id="totalArticleCount" parameterType="java.util.Map" resultType="int">
        select count(user_id)
        from users
 		where type =#{bcode}
        <if test="key!='' and word!=''">
            <if test="key == 'name'">
                and name like '%'||#{word}||'%'
            </if>
            <if test="key != 'name'">
                and ${key} = #{word}
            </if>
        </if> 
    </select>
    
</mapper>